{% extends 'base.jinja' %}
{% block content %}
  <div id="chat-outer">
    {% include 'fragments/chat_sidebar.jinja' %}
    <div id="chat-container">
      <div class="container">
        {% set messages = chat.message_set.all().order_by('timestamp') %}
        <div id="messages-container" class="mx-1 pt-3">
          {% if not messages %}
            <div id="no-messages-placeholder" class="text-muted">
              <p class="text-center">Type a message to start chatting with the large language model (LLM), and press Ctrl+Enter to send.</p>
              <p class="text-center">While this environment is private to PHAC, do not enter protected information.</p>
            </div>
          {% else %}
            {% include 'fragments/messages.jinja' %}
          {% endif %}
        </div>
        <div class="add-message-container">
          <form hx-post="{{ request.path }}"
                hx-swap="beforeend"
                hx-target="#messages-container"
                id="chat-form">
            <div class="row mx-0">
              {{ form.message.label_tag(attrs={"class": "visually-hidden"}) }}
              <div class="col px-1">
                <div class="input-group" id="chat-inputs">
                  {{ form.message }}
                  <button id="send-button"
                          class="btn btn-outline-secondary"
                          type="submit"
                          aria-label="Send">
                    <i class="bi bi-send"></i>
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script>
    (function () {
    const send_button = document.getElementById('send-button');
    /* Ctrl+Enter to submit */
    document.addEventListener('keydown', function (event) {
      if (event.ctrlKey && event.key === 'Enter') {
        send_button.click();
      }
    });
    document.getElementById('id_message').focus();
    })();
    htmx.on('htmx:beforeSend', function(evt) {
      if (evt.srcElement == document.getElementById('chat-form')) {
        /* Disable the textarea and submit button */
        document.getElementById('id_message').disabled = true;
        document.getElementById('send-button').disabled = true;
      }
    });
  </script>
  <style>
  #top-nav .container,
  footer .container {
    max-width: 100%;
  }
  </style>
{% endblock content %}
