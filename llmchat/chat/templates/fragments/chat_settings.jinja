<div class="modal modal-lg fade"
     id="settings-modal"
     tabindex="-1"
     aria-labelledby="settings-label"
     aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="settings-label">
          <i class="bi bi-gear pe-1"></i>
          <span>Chat settings</span>
        </h1>
        <button type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"></button>
      </div>
      <form hx-post="{{ url("chat_settings") }}" hx-swap="none">
        <div class="modal-body">
          <div class="row mb-3">
            <div class="col-4">{{ settings_form.chat_model.label_tag() }}</div>
            <div class="col">{{ settings_form.chat_model }}</div>
          </div>
          <div class="row">
            <div class="col-4">{{ settings_form.system_prompt.label_tag() }}</div>
            <div class="col">{{ settings_form.system_prompt }}</div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Save changes</button>
        </div>
      </form>
    </div>
  </div>
</div>